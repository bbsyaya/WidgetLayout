<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
    </style>

    <style name="Activity_Welcome" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/layer_bk_welcome</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Activity_Main" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Animation_Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
</resources>
